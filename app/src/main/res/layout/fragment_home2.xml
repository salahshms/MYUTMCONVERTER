<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".app.ui.homeFrag"
    android:padding="15dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="20dp"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Spinner
                    android:layout_alignParentTop="true"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:theme="@style/CardView.Dark"
                    android:id="@+id/convertionunts"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/convertunits"/>


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/convertionunts"
                    android:id="@+id/lon">
                    <EditText
                        android:imeOptions="actionNext"
                        android:maxLines="1"
                        android:id="@+id/longit"
                        android:selectAllOnFocus="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/enter_longitude"
                        android:importantForAutofill="no"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_below="@+id/lon"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/la">
                    <EditText
                        android:imeOptions="actionNext"
                        android:maxLines="1"
                        android:id="@+id/latit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/enter_latitude"
                        android:inputType="text"
                        android:importantForAutofill="no" />
                </com.google.android.material.textfield.TextInputLayout>



                <LinearLayout
                    android:layout_below="@+id/la"
                    android:orientation="vertical"
                    android:id="@+id/rel"
                    android:layout_marginTop="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout

                        android:weightSum="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_weight="0.8"
                            android:textColor="@color/blue"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/degreey"/>
                        <ImageView
                            android:contentDescription="@string/todo"
                            android:layout_weight="0.2"
                            android:src="@drawable/ic_content_copy_black_24dp"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:id="@+id/copydegreey"/>
                    </LinearLayout>
                    <LinearLayout
                        android:weightSum="1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_weight="0.8"
                            android:textColor="@color/blue"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/degreex"/>
                        <ImageView
                            android:layout_weight="0.2"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/ic_content_copy_black_24dp"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:id="@+id/copydegreex"
                            android:contentDescription="@string/todo" />
                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="25dp"
                    android:orientation="vertical"
                    android:layout_below="@+id/rel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:padding="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/calculate"
                        android:text="@string/calculate"
                        android:background="@color/blue"
                        android:textColor="@color/white"
                        android:textStyle="bold"/>
                </LinearLayout>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</ScrollView>