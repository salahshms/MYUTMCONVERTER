<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="salahsh.shams">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="salahsh.shams.app.application"
        android:icon="@mipmap/convert"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/convert"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="salahsh.shams.splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="salahsh.shams.app.ConvertActivity"
            android:label="@string/title_activity_convert"
            android:windowSoftInputMode="stateHidden" />


    </application>

</manifest>